{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS", // Set the module option to "CommonJS"
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "isolatedModules": true,
    
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "**/*.tsx"]
  // "include": ["src/**/*.tsx", "src/**/*.ts", "src/components/Header.js", "src/routes/countries/Countries.js", "src/routes/countries/AllCountries.js"],
  // "exclude": ["node_modules"]
}